extends ../_default
include ../_mixins


block vars
	- var active = "Shop"
	- var title = "Shopping cart"
	- var header_class = "page-header subpage_header"

block head

block header

	-var header_h1 = "Your Shopping Cart"
	-var header_small = "Shop"
	-var header_big = ""
	-var header_content = ""
	include ../includes/_header_transparent

block content
	section.section-border.text-center.text-lg-left
		.container
			ol.breadcrumb
				li: a(href="index.html") Home
				li: a(href="#") Shop
				li.active: a(href="#") Shopping cart


	= '\n'
	//Start section
	section.well.well-sm.section-border.shop-cart
		.container
			.row.align-items-center.row-30
				.col-12
					.table-responsive
						table.table.order.text-center.text-lg-left
							thead
								tr.bg-lighter.text-uppercase.text-darker-clr.font-secondary.section-border
									th
									th
									th Product
									th Price
									th Quantity
									th Total
							tbody
								tr.section-border
									td.text-center
										a(href='#').fa-trash-o.h5.text-light-clr
									td.text-center
										a(href='shop-product.html')
											img(src="images/shop-14.jpg" alt="")
									td.text-left
										h6.text-dark-variant-4
											a(href='shop-product.html') Black Leather & Jersey Hoodie White #[br.hidden-sm.hidden-xs] Double Zip Hoodie
									td
										span.price $12.49
									td
										span.quantity.round-xl
											input(type='number' value='1')
									td
										span.price $12.49
								tr.section-border
									td.text-center
										a(href='#').fa-trash-o.h5.text-light-clr
									td.text-center
										a(href='shop-product.html')
											img(src="images/shop-15.jpg" alt="")
									td.text-left
										h6.text-dark-variant-4
											a(href='shop-product.html') ESPRIT Men's Long Sleeve Jacket
									td
										span.price $12.49
									td
										span.quantity.round-xl
											input(type='number' value='1')
									td
										span.price $12.49

				.col-12.col-md-8.text-center.text-md-left
					form.form-shop
						div.form-wrap
							input(type="text" placeholder="Coupon Code").form-input.round-small#exampleInputText1
						button(type="submit").button.button-default.button-xs.round-small.text-dark-variant-3 Apply Coupon
				.col-12.col-md-4.text-center.text-md-right
					a(href='#').button.button-default.button-xs.round-small.text-dark-variant-3 Update cart

				.col-12.margin-5
					p.text-uppercase.text-darker-clr.font-secondary.letter-spacing-1 Cart Totals

					table.table.cart-total
						thead
							tr.font-secondary.text-base.section-border
								th.bg-lighter Subtotal
								th.bg-lighter.text-right: span.price $24,98
							tr.font-secondary.text-base
								th.bg-lighter Total
								th.bg-lighter.total.text-right: span.price $24,98
					.text-center.text-md-right
						a(href='#').button.button-primary.button-xs.round-small Proceed to checkout
	//End section



block footer
	-var footer_class = "page-footer footer-centered text-center"
	include ../includes/_footer_centered
